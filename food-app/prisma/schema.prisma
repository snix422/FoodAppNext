

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String @unique
  posts Post[]
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String   @unique
  content        String   
  dataPublikacji DateTime @default(now())
  authorId       Int
  author         Author   @relation(fields: [authorId], references: [id])
  imageUrl       String
}

model Kontakt {
  id      Int    @id @default(autoincrement())
  email   String
  telefon String
  adres   String
}

model AboutUs {
  id Int @id @default(autoincrement())
  shortContent String
  lognContent String
}

model Offer {
  id Int @id @default(autoincrement())
  title String
  description String
  price Int
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   
  createdAt DateTime @default(now())
  sessions  Session[]
  userMeals UserMeal[]
}

model Session {
  id            Int      @id @default(autoincrement())
  sessionToken  String   @unique
  userId        Int
  expires       DateTime
  user          User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  expires    DateTime
}

model Meal {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  kcal           Int
  carbohydrates  Float
  protein        Float
  fat            Float
  preparation    String
  ingredients    String[]
  type           MealType
  imageUrl       String?
}

enum MealType {
  BREAKFAST
  SECOND_BREAKFAST
  LUNCH
  DINNER
}

model UserMeal {
  id         Int        @id @default(autoincrement())
  userId     Int
  meals      Json // Stores meal IDs with their types as a list of objects

  user       User       @relation(fields: [userId], references: [id])

  @@unique([userId]) // Each user has one record for all meal selections
}



 


